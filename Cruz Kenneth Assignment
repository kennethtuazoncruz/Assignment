#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int month, day, year;

    cout << "Enter your Month of Birth (1-12): ";
    cin >> month;
    cout << "Enter your Day of Birth (1-31): ";
    cin >> day;
    cout << "Enter your Year of Birth (e.g. 2010): ";
    cin >> year;

    cout << "\r" << endl;

    switch(month)
    {
        case 1:
            if (day > 0 & day <= 31)
            cout << "January " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 2:
            if (day > 0 & day <= 29)
            cout << "February " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 3:
            if (day > 0 & day <= 31)
            cout << "March " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 4:
            if (day > 0 & day <= 30)
            cout << "April " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 5:
            if (day > 0 & day <= 31)
            cout << "May " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 6:
            if (day > 0 & day <= 30)
            cout << "June " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 7:
            if (day > 0 & day <= 31)
            cout << "July " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 8:
            if (day > 0 & day <= 31)
            cout << "August " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 9:
            if (day > 0 & day <= 30)
            cout << "September " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 10:
            if (day > 0 & day <= 31)
            cout << "October " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 11:
            if (day > 0 & day <= 30)
            cout << "November " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        case 12:
            if (day > 0 & day <= 31)
            cout << "December " << day << ", " << year << endl;
            else
            cout << "Invalid Input - Make sure you put a valid date!" << endl;
            break;

        default:
            cout << "Error! Check your inputs again!" << endl;

            _getch();
    }
    return 0;
}
